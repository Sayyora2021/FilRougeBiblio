@using FilRougeBiblio.Core.Entities;
@model FilRougeBiblio.Core.Entities.Theme

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Theme</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livres)
        </dt>
        <dd class="col-sm-10">
            @foreach (Livre livre in Model.Livres)
            {
                <p>@livre.Titre</p>
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
