@model FilRougeBiblio.Core.Entities.Emprunt
@using FilRougeBiblio.Core.Entities;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Emprunt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="LecteurId" asp-for="Lecteur" asp-items="@(ViewBag.Lecteurs as SelectList)"></select>
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <!--<select name="ExemplaireId" asp-for="Exemplaire" asp-items="@(ViewBag.Exemplaires as SelectList)"></select>-->
                <select name="ExemplaireId">
                    @foreach(Exemplaire ex in ViewBag.Exemplaires)
                    {
                        <option value="@(ex.Id)">@(ex.Livre.Titre)</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
